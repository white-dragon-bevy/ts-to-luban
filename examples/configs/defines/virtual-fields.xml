<module name="virtual_fields" comment="自动生成的 ts class Bean 定义">

    <!-- 武器配置 注意：mainStat 和 subStat 字段不会在 TypeScript 中定义 它们通过 luban.config.toml 中的 virtual_fields 配置添加 -->
    <bean name="WeaponConfig" parent="TsClass" comment="武器配置 注意：mainStat 和 subStat 字段不会在 TypeScript 中定义 它们通过 luban.config.toml 中的 virtual_fields 配置添加">
        <var name="id" type="double"/>
        <var name="name" type="string"/>
        <var name="mainStat" type="ScalingStat" comment="主属性" tags="relocateTo=TScalingStat,prefix=_main"/>
        <var name="subStat" type="ScalingStat" comment="副属性" tags="relocateTo=TScalingStat,prefix=_sub"/>
    </bean>

    <!-- 装甲配置 -->
    <bean name="ArmorConfig" parent="TsClass" comment="装甲配置">
        <var name="id" type="double"/>
        <var name="name" type="string"/>
        <var name="defenseStat" type="ScalingStat" comment="防御属性" tags="relocateTo=TScalingStat,prefix=_defense"/>
    </bean>

    <!-- 属性缩放配置 -->
    <bean name="ScalingStat" parent="TsClass" comment="属性缩放配置">
        <var name="type" type="string"/>
        <var name="value" type="double"/>
    </bean>

    <table name="WeaponConfigTable" value="WeaponConfig" index="id" input="../datas/weapon-config" />
    <table name="ArmorConfigTable" value="ArmorConfig" index="id" input="../datas/armor-config" />

</module>
