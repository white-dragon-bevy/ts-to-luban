<?xml version="1.0" encoding="utf-8"?>
<module name="examples" comment="自动生成的 ts class Bean 定义">

    <bean name="Item" alias="道具" comment="道具配置">
        <var name="id" type="double"/>
        <var name="name" type="string!"/>
        <var name="category" type="string#set=weapon,armor,consumable,material"/>
        <var name="stackLimit" type="double#range=[1,999]"/>
        <var name="aa" type="string" comment="test"/>
    </bean>

    <bean name="Skill" alias="技能" comment="技能配置">
        <var name="id" type="double"/>
        <var name="skillName" type="string!"/>
        <var name="cooldown" type="double#range=[0,100]"/>
    </bean>

    <bean name="DropItem" comment="掉落物品">
        <var name="itemId" type="double#ref=examples.ItemTable" comment="引用道具表 -&gt; #ref=examples.ItemTable"/>
        <var name="count" type="double#range=[1,100]"/>
        <var name="probability" type="double#range=[0,100]"/>
    </bean>

    <bean name="Monster" alias="怪物" comment="怪物配置">
        <var name="id" type="double"/>
        <var name="name" type="string!"/>
        <var name="level" type="double#range=[1,100]"/>
        <var name="hp" type="double#range=[1,999999]"/>
        <var name="skills" type="(list#size=[1,4]),double#ref=examples.SkillTable" comment="技能列表 - 最多4个技能，引用技能表 -&gt; (list#size=[1,4]),double#ref=examples.SkillTable"/>
        <var name="drops" type="(list#index=itemId),DropItem" comment="掉落列表 - 按道具ID索引"/>
    </bean>

    <bean name="Player" comment="玩家信息">
        <var name="id" type="double"/>
        <var name="name" type="string!"/>
        <var name="avatar" type="string!"/>
        <var name="signature" type="string?" comment="可选签名"/>
    </bean>

    <bean name="Difficulty" comment="难度配置">
        <var name="id" type="double"/>
        <var name="difficultyLevel" type="double#range=[1,3]"/>
        <var name="difficultyName" type="string"/>
    </bean>

    <bean name="Team" comment="队伍配置">
        <var name="id" type="double"/>
        <var name="members" type="(list#size=3),double" comment="固定3人"/>
        <var name="substitutes" type="(list#size=[0,2]),double" comment="0-2人替补"/>
    </bean>

    <!-- 数据表配置 -->
    <table name="ItemTable" value="Item" mode="map" index="id" input="*@../datas/item/"/>
    <table name="SkillTable" value="Skill" mode="map" index="id" input="*@../datas/skill/"/>
    <table name="MonsterTable" value="Monster" mode="map" index="id" input="*@../datas/monster/"/>
    <table name="PlayerTable" value="Player" mode="map" index="id" input="*@../datas/player/"/>
    <table name="DifficultyTable" value="Difficulty" mode="map" index="id" input="*@../datas/difficulty/"/>
    <table name="TeamTable" value="Team" mode="map" index="id" input="*@../datas/team/"/>

</module>